global:
  evaluation_interval: 15s
  scrape_interval: 15s
  scrape_timeout: 10s

scrape_configs:
  - job_name: prometheus
    metrics_path: /metrics
    static_configs:
      - targets:
        - 127.0.0.1:9090

  - job_name: node
    static_configs:
      - targets:
          {% for item in groups['cs'] -%}
          - {{ hostvars[item]['private_addr'] }}:9100
          {% endfor %}

  - job_name: nginx
    static_configs:
      - targets:
          - nginx-exporter:9113

  - job_name: postgres
    static_configs:
      - targets:
          - postgres-exporter:9187
