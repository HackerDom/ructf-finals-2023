version: "2.4"

services:
  node_exporter:
    image: prom/node-exporter:latest
    command:
      - "--path.rootfs=/host"
      - "--web.listen-address={{ hostvars[inventory_hostname]['private_addr'] }}:9100"
    restart: unless-stopped
    network_mode: host
    pid: host
    volumes:
      - "/:/host:ro,rslave"
